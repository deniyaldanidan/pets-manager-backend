generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum PetType {
  CAT
  DOG
}

enum PetAge {
  PUPPYHOOD
  ADOLESCENCE
  ADULTHOOD
  SENIOR
}

enum PetGender {
  MALE
  FEMALE
}

model User {
  id       String @id @default(uuid())
  name     String
  username String @unique
  email    String @unique
  password String
  role     Role   @default(USER)
  refresh  String
  pets     Pet[]
}

model Pet {
  id             Int       @id @default(autoincrement())
  name           String
  petId          String    @unique
  type           PetType
  age            PetAge
  gender         PetGender
  vaccinated     Boolean
  neutered       Boolean
  sprayed        Boolean
  shots_uptodate Boolean
  reason         String
  info           String
  city           String
  state          String
  phone          String
  created_at     DateTime  @default(now())
  approved       Boolean   @default(false)
  approved_at    DateTime?

  breed    Breed @relation(fields: [breed_id], references: [id])
  breed_id Int

  owner   User   @relation(fields: [user_id], references: [id])
  user_id String
}

model Breed {
  id   Int     @id @default(autoincrement())
  type PetType
  name String
  slug String  @unique
  pets Pet[]
}
