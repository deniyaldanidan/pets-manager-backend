generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum PetType {
  CAT
  DOG
}

enum PetAge {
  PUPPYHOOD
  ADOLESCENCE
  ADULTHOOD
  SENIOR
}

enum PetGender {
  MALE
  FEMALE
}

enum ApproveStatus {
  APPROVED
  WAITING
  CORRECTION
}

model User {
  id       String @id @default(uuid())
  name     String
  username String @unique
  email    String @unique
  password String
  role     Role
  refresh  String
}

model Pet {
  id             Int           @id @default(autoincrement())
  name           String
  type           PetType
  age            PetAge
  gender         PetGender
  vaccinated     Boolean
  neutered       Boolean
  sprayed        Boolean
  shots_uptodate Boolean
  reason         String
  approved       ApproveStatus @default(WAITING)
  breed          Breed         @relation(fields: [breed_id], references: [id])
  breed_id       Int
  request        PetReqs?
}

model Breed {
  id   Int     @id @default(autoincrement())
  type PetType
  name String
  slug String  @unique
  pets Pet[]
}

model PetReqs {
  id         Int    @id @default(autoincrement())
  admin_note String
  pet        Pet    @relation(fields: [pet_id], references: [id])
  pet_id     Int    @unique
}
